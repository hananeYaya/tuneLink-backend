{
    "name": "Mobile Musician FastAPI Development",
    
    "dockerComposeFile": ["../docker-compose.yml"],
    
    // Changement du service pour refl√©ter la racine du projet
    "service": "backend",
    
    // Modification du workspaceFolder pour pointer vers la racine du projet
    "workspaceFolder": "/workspace",
    
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.formatting.provider": "black",
                "python.formatting.blackPath": "/usr/local/bin/black",
                "editor.formatOnSave": true,
                "editor.rulers": [88],
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "matangover.mypy",
                "njpwerner.autodocstring",
                "ms-azuretools.vscode-docker",
                "github.copilot",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    
    "remoteUser": "root",
    
    "postCreateCommand": "pip install black flake8 isort mypy pylint"
}